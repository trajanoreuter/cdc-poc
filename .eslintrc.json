{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "semi": [2, "never"],
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "space-before-function-paren": [2, "always"],
        "max-params": ["error", { "max": 3 }]
    }
}
